<h1>Create a Team and Heroes!</h1>
<form action="/teams" method="post">
  <p>
    <label for="team[name]">Name</label>
    <input type="text" name="team[name]" id="team[name]">
  </p>
  <p>
    <label for="team[motto]">Motto</label>
    <input type="text" name="team[motto]" id="team[motto]">
  </p>
  <% 3.times do |i| %>
    <% idx = i + 1 %>
    <% prefix = "member#{idx}_" %>
    <h2>Hero <%= idx %></h2>
    <% ["name", 'power', 'bio'].each do |attribute| %>
      <p>
        <label for="<%= prefix + attribute %>"><%= "Hero's #{attribute.capitalize}" %></label>
        <input type="text" name="team[members][]<%= "[#{attribute}]" %>" id="<%= prefix + attribute %>">
      </p>
    <% end %>
  <% end %>
  <input type="submit" value="submit">
</form>
